<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:m="urn:import:gwt.material.design.client.ui">

    <ui:with field='res' type='gwt.material.design.client.resources.MaterialResources' />

    <g:HTMLPanel>
        <m:MaterialTitle title="Basic Card"/>
        <m:MaterialRow>
            <m:MaterialColumn grid="s12 m12 l4">
                <m:MaterialCard>
                    <m:MaterialCardImage waves="light">
                        <m:MaterialImage resource="{res.image}"/>
                    </m:MaterialCardImage>

                    <m:MaterialCardContent textColor="black">
                        <m:MaterialCardTitle text="Card Title" icon="more_vert" iconPosition="right" textColor="black"/>
                    </m:MaterialCardContent>

                    <m:MaterialCardReveal>
                        <m:MaterialCardTitle text="Card Title" icon="close" iconPosition="right" textColor="black"/>
                        <m:MaterialLabel text="Here is some more information about this product that is only revealed once clicked on." />
                    </m:MaterialCardReveal>

                    <m:MaterialCardAction>
                        <m:MaterialLink text="Share" icon="mdi-social-share"/>
                        <m:MaterialLink text="Download" icon="mdi-file-file-download"/>
                    </m:MaterialCardAction>
                </m:MaterialCard>
            </m:MaterialColumn>
        </m:MaterialRow>


        <pre>
            <span class="tag">&lt;m:MaterialCard</span>
            <span class="attr">type</span>="basic"<span class="attr">title</span>="Card Title"<span class="attr">
            description</span>="Here is some more information about this product that is only revealed once clicked on."
            <span class="tag">></span>
            <span class="tag">&lt;m:link></span>
            <span class="tag">&lt;m:MaterialLink</span>
            <span class="tag">text</span>="Share"<span class="tag">icon</span>="mdi-social-share"
            <span class="tag">/></span>
            <span class="tag">&lt;/m:link></span>
            <span class="tag">&lt;m:link></span>
            <span class="tag">&lt;m:MaterialLink</span>
            <span class="tag">text</span>="Download"<span class="tag">icon</span>="mdi-file-file-download"
            <span class="tag">/></span>
            <span class="tag">&lt;/m:link></span>
            <span class="tag">&lt;/m:MaterialCard</span>
            <span class="tag">></span>
        </pre>

        <m:MaterialTitle title="Card Image"/>
        <m:MaterialRow>
            <m:MaterialColumn grid="s12 m12 l4">
                <m:MaterialCard>
                    <m:MaterialCardImage waves="light">
                        <m:MaterialImage resource="{res.image}"/>
                    </m:MaterialCardImage>

                    <m:MaterialCardContent textColor="black">
                        <m:MaterialCardTitle text="Card Title" icon="more_vert" iconPosition="right" textColor="black"/>
                    </m:MaterialCardContent>

                    <m:MaterialCardReveal>
                        <m:MaterialCardTitle text="Card Title" icon="close" iconPosition="right" textColor="black"/>
                        <m:MaterialLabel text="I am a very simple card. I am good at containing small bits of information. I am convenient because I require little markup to use effectively." />
                    </m:MaterialCardReveal>

                    <m:MaterialCardAction>
                        <m:MaterialLink text="Share" icon="mdi-social-share"/>
                        <m:MaterialLink text="Download" icon="mdi-file-file-download"/>
                    </m:MaterialCardAction>
                </m:MaterialCard>
            </m:MaterialColumn>
        </m:MaterialRow>

        <pre>
            <span class="tag">&lt;m:MaterialCard</span>
            <span class="attr">type</span>="image"<span class="attr">title</span>="Card Title"<span class="attr">
            description</span>="Here is some more information about this product that is only revealed once clicked on."
            <span class="tag">></span>
            <span class="tag">&lt;m:link></span>
            <span class="tag">&lt;m:MaterialLink</span>
            <span class="tag">text</span>="Share"<span class="tag">icon</span>="mdi-social-share"
            <span class="tag">/></span>
            <span class="tag">&lt;/m:link></span>
            <span class="tag">&lt;m:link></span>
            <span class="tag">&lt;m:MaterialLink</span>
            <span class="tag">text</span>="Download"<span class="tag">icon</span>="mdi-file-file-download"
            <span class="tag">/></span>
            <span class="tag">&lt;/m:link></span>
            <span class="tag">&lt;/m:MaterialCard</span>
            <span class="tag">></span>
        </pre>

        <m:MaterialRow>
            <m:MaterialColumn grid="s12 m12 l4">
                <m:MaterialTitle title="Card Reveal"/>
                <m:MaterialCard>
                    <m:MaterialCardImage waves="light">
                        <m:MaterialImage resource="{res.image}"/>
                    </m:MaterialCardImage>

                    <m:MaterialCardContent textColor="black">
                        <m:MaterialCardTitle text="Card Title" icon="more_vert" iconPosition="right" textColor="black"/>
                    </m:MaterialCardContent>

                    <m:MaterialCardReveal>
                        <m:MaterialCardTitle text="Card Title" icon="close" iconPosition="right" textColor="black"/>
                        <m:MaterialLabel text="Here is some more information about this product that is only revealed once clicked on." />
                    </m:MaterialCardReveal>

                    <m:MaterialCardAction>
                        <m:MaterialLink text="Share" icon="mdi-social-share"/>
                        <m:MaterialLink text="Download" icon="mdi-file-file-download"/>
                    </m:MaterialCardAction>
                </m:MaterialCard>
            </m:MaterialColumn>
        </m:MaterialRow>

        <pre>
            <span class="tag">&lt;m:MaterialCard</span>
            <span class="attr">type</span>="reveal"<span class="attr">title</span>="Card Title"<span class="attr">
            description</span>="Here is some more information about this product that is only revealed once clicked on."
            <span class="tag">></span>
            <span class="tag">&lt;m:link></span>
            <span class="tag">&lt;m:MaterialLink</span>
            <span class="tag">text</span>="Share"<span class="tag">icon</span>="mdi-social-share"
            <span class="tag">/></span>
            <span class="tag">&lt;/m:link></span>
            <span class="tag">&lt;m:link></span>
            <span class="tag">&lt;m:MaterialLink</span>
            <span class="tag">text</span>="Download"<span class="tag">icon</span>="mdi-file-file-download"
            <span class="tag">/></span>
            <span class="tag">&lt;/m:link></span>
            <span class="tag">&lt;/m:MaterialCard</span>
            <span class="tag">></span>
        </pre>


    </g:HTMLPanel>


</ui:UiBinder>
