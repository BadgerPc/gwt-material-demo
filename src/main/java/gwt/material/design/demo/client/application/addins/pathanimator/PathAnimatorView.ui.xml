<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:m="urn:import:gwt.material.design.client.ui"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:m.addins="urn:import:gwt.material.design.addins.client.ui"
             xmlns:demo="urn:import:gwt.material.design.demo.client.ui">
    <ui:style>
      .overlayPanel{
        width: 100%;
        height: 100%;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        position: fixed;
        z-index: 1000;
        opacity: 0;
        visibility: hidden;
      }
      .title{
        width: 50%;
        margin: auto;
        margin-bottom: 50px;
      }
    </ui:style>
    <g:HTMLPanel>
      <m:MaterialTitle title="Usage"/>
      <m:MaterialButton ui:field="btnSource" text="Meaningful Transitions" backgroundColor="blue" size="LARGE" />

      <m:MaterialPanel ui:field="panelTarget" textAlign="CENTER" backgroundColor="blue" addStyleNames="{style.overlayPanel}">
        <m:MaterialTitle addStyleNames="{style.title}" textColor="white" title="Meaningful transitions" description="Motion design can effectively guide the userâ€™s attention in ways that both inform and delight. Use motion to smoothly transport users between navigational contexts, explain changes in the arrangement of elements on a screen, and reinforce element hierarchy."/>
        <m:MaterialButton ui:field="btnClose" text="Back to Main Page" backgroundColor="blue lighten-2" textColor="white" size="LARGE" />
      </m:MaterialPanel>
    </g:HTMLPanel>
</ui:UiBinder>
