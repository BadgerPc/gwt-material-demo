<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
			 xmlns:m="urn:import:gwt.material.design.client.ui"
		>
	<ui:style>
		.window{
			height: 60vh;
		}
	</ui:style>

	<m:MaterialPanel addStyleNames="{style.window}">
		<m:MaterialNavBar backgroundColor="blue">
			<m:MaterialSideNav closeOnClick="false" name="Demo" type="OPEN" width="0">
				<m:MaterialNavSection align="right">
					<m:MaterialLink icon="mdi-social-whatshot" textColor="white" tooltip="Starter"/>
				</m:MaterialNavSection>
				<m:MaterialNavSection align="right">
					<m:MaterialLink icon="mdi-navigation-apps" textColor="white" tooltip="Apps"/>
				</m:MaterialNavSection>
				<m:MaterialNavSection align="right">
					<m:MaterialLink icon="mdi-social-notifications" textColor="white" tooltip="Notification"/>
				</m:MaterialNavSection>
			</m:MaterialSideNav>
		</m:MaterialNavBar>

		<m:MaterialContainer>
			<m:MaterialTab backgroundColor="blue" textColor="white" indicatorColor="white" waves="white" >
				<m:MaterialTabItem textColor="white"  />
				<m:tab><m:MaterialLabel text="Tab 1" /></m:tab>
				<m:tab><m:MaterialLabel text="Tab 2" /></m:tab>
				<m:tab><m:MaterialLabel text="Tab 3" /></m:tab>
				<m:tab><m:MaterialLabel text="Tab 4" /></m:tab>
				<m:content>
					<m:MaterialTopNav fontSize="2" padding="5" title="Sample 1" description="This is sample 1" color="white" textColor="black lighten-1" />
				</m:content>
				<m:content>
					<m:MaterialTopNav fontSize="2" padding="5" title="Sample 2" description="This is sample 2" color="white" textColor="black lighten-1" />
				</m:content>
				<m:content>
					<m:MaterialTopNav fontSize="2" padding="5"  title="Sample 3" description="This is sample 3"  color="white" textColor="black lighten-1" />
				</m:content>
				<m:content>
					<m:MaterialTopNav fontSize="2" padding="5"  title="Sample 3" description="This is sample 3"  color="white" textColor="black lighten-1" />
				</m:content>
			</m:MaterialTab>
		</m:MaterialContainer>
	</m:MaterialPanel>
</ui:UiBinder> 