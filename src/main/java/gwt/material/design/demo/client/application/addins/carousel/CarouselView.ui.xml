                    <m:MaterialLabel textColor="BLUE" fontSize="1em" fontWeight="BOLD" text="250px" />
                </m:MaterialPanel>
            </ma:carousel.MaterialCarousel>
            <demo:PrettyPre addStyleNames="lang-xml">
                &emsp;&lt;ma:carousel.MaterialCarousel textAlign="CENTER" infinite="true" speed="300" centerMode="true" variableWidth="true" slidesToShow="3"><br/>
                &emsp;&lt;m:MaterialPanel width="125px" margin="4" shadow="1" paddingTop="80" backgroundColor="WHITE" padding="20" height="200px"><br/>
                &emsp;&emsp;&lt;m:MaterialLabel textColor="BLUE" fontSize="1em" fontWeight="BOLD" text="125px" /><br/>
                &emsp;&lt;/m:MaterialPanel><br/>
                &emsp;&lt;m:MaterialPanel width="200px" margin="4" shadow="1" paddingTop="80" backgroundColor="WHITE" padding="20" height="200px"><br/>
                &emsp;&emsp;&lt;m:MaterialLabel textColor="BLUE" fontSize="1em" fontWeight="BOLD" text="200px" /><br/>
                &emsp;&lt;/m:MaterialPanel><br/>
                &emsp;&lt;m:MaterialPanel width="175px" margin="4" shadow="1" paddingTop="80" backgroundColor="WHITE" padding="20" height="200px"><br/>
                &emsp;&emsp;&lt;m:MaterialLabel textColor="BLUE" fontSize="1em" fontWeight="BOLD" text="175px" /><br/>
                &emsp;&lt;/m:MaterialPanel><br/>
                &lt;/ma:carousel.MaterialCarousel><br/>
            </demo:PrettyPre>
        </m:MaterialRow>

        <!-- Adaptive Height-->
        <m:MaterialRow addStyleNames="code">
            <m:MaterialTitle title="Adaptive Height" />
            <ma:carousel.MaterialCarousel textAlign="CENTER" infinite="true" speed="300" slidesToShow="1" adaptiveHeight="true" >
                <m:MaterialPanel height="100px" margin="4" shadow="1" backgroundColor="WHITE" padding="20" paddingTop="40">
                    <m:MaterialLabel textColor="BLUE" fontSize="1em" fontWeight="BOLD" text="125px" />
                </m:MaterialPanel>
                <m:MaterialPanel height="200px" margin="4" shadow="1" backgroundColor="WHITE" padding="20" paddingTop="90">
                    <m:MaterialLabel textColor="BLUE" fontSize="1em" fontWeight="BOLD" text="200px" />
