<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:m="urn:import:gwt.material.design.client.ui"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:with field="res" type="gwt.material.design.demo.client.resources.MaterialResources" />

    <m:MaterialRow>
        <m:MaterialColumn grid="l3">
            <m:MaterialCard backgroundColor="white" >
                <m:MaterialCardImage waves="LIGHT">
                    <m:MaterialImage resource="{res.template_starter}"/>
                    <m:MaterialCardTitle text="Starter Template"/>
                </m:MaterialCardImage>

                <m:MaterialCardAction>
                    <m:MaterialLink text="Demo" href="http://gwt-material-starter.appspot.com/" target="_blank"/>
                </m:MaterialCardAction>
            </m:MaterialCard>
        </m:MaterialColumn>

        <m:MaterialColumn grid="l3">
            <m:MaterialCard backgroundColor="white" >
                <m:MaterialCardImage waves="LIGHT">
                    <m:MaterialImage resource="{res.template_wrenx}"/>
                    <m:MaterialCardTitle text="Map Template"/>
                </m:MaterialCardImage>

                <m:MaterialCardAction>
                    <m:MaterialLink text="Demo" href="http://wrenx2015.appspot.com/" target="_blank"/>
                </m:MaterialCardAction>
            </m:MaterialCard>
        </m:MaterialColumn>

        <m:MaterialColumn grid="l3">
            <m:MaterialCard backgroundColor="white" >
                <m:MaterialCardImage waves="LIGHT">
                    <m:MaterialImage resource="{res.template_parallax}"/>
                    <m:MaterialCardTitle text="Parallax Template"/>
                </m:MaterialCardImage>

                <m:MaterialCardAction>
                    <m:MaterialLink text="Demo" href="http://gwt-material-starter.appspot.com/" target="_blank"/>
                </m:MaterialCardAction>
            </m:MaterialCard>
        </m:MaterialColumn>

        <m:MaterialColumn grid="l3">
            <m:MaterialCard backgroundColor="white" >
                <m:MaterialCardImage waves="LIGHT">
                    <m:MaterialImage resource="{res.template_login}"/>
                    <m:MaterialCardTitle text="Login Template"/>
                </m:MaterialCardImage>

                <m:MaterialCardAction>
                    <m:MaterialLink text="Demo" href="http://gwt-material-starter.appspot.com/" target="_blank"/>
                </m:MaterialCardAction>
            </m:MaterialCard>
        </m:MaterialColumn>
    </m:MaterialRow>
</ui:UiBinder>
