<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:m="urn:import:gwt.material.design.client.ui">

    <ui:style field="local">

        .titleLabel {
            font-size: 1em;
            color: white;
        }

        .descriptionLabel {
            font-size: 0.35em;
            color: white;
        }

        .btnGettingStarted {
            font-size: 0.3em !important;
        }

    </ui:style>

    <g:HTMLPanel>
        <m:MaterialTopNav ui:field="topNav" color="blue" textColor="white">
            <m:child>
                <m:MaterialPanel>
                    <g:Label ui:field="title" addStyleNames="{local.titleLabel}"/>

                    <g:Label ui:field="description" addStyleNames="{local.descriptionLabel}"/>

                <m:MaterialButton ui:field="gettingStartedPanel" text="Get Started" size="large"
                                  backgroundColor="blue lighten-2" addStyleNames="{local.btnGettingStarted}"/>
            </m:MaterialPanel>
        </m:child>
    </m:MaterialTopNav>
</g:HTMLPanel>


        </ui:UiBinder>
