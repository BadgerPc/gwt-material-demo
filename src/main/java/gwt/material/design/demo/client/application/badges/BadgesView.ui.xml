<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:m="urn:import:gwt.material.design.client.ui">

    <g:HTMLPanel>
        <m:MaterialTitle title="Collections"/>
        <m:MaterialCollection>
            <m:MaterialCollectionItem>
                <m:MaterialPanel>
                    <m:MaterialLink text="Sample 1">
                        <m:MaterialBadge text="1 new" backgroundColor="blue"/>
                    </m:MaterialLink>
                    <m:MaterialBadge text="1"/>
                </m:MaterialPanel>
            </m:MaterialCollectionItem>
            <m:MaterialCollectionItem>
                <m:MaterialPanel>
                    <m:MaterialLink text="Sample 1">
                        <m:MaterialBadge text="1 new" backgroundColor="blue"/>
                    </m:MaterialLink>

                </m:MaterialPanel>
            </m:MaterialCollectionItem>
            <m:MaterialCollectionItem>
                <m:MaterialLink text="Sample 3"/>
            </m:MaterialCollectionItem>
            <m:MaterialCollectionItem>
                <m:MaterialLink text="Sample 4"/>
            </m:MaterialCollectionItem>
        </m:MaterialCollection>

        <pre>
            &lt;m:MaterialCollection>
            &lt;m:item>
            &lt;m:MaterialPanel>
            &lt;m:MaterialLink text="Sample 1" >
            &lt;m:badge>&lt;m:MaterialBadge text="1 new" color="blue"/>&lt;/m:badge>
            &lt;/m:MaterialLink>
            &lt;m:MaterialBadge text="1" />
            &lt;/m:MaterialPanel>
            &lt;/m:item>
            &lt;m:item>
            &lt;m:MaterialPanel>
            &lt;m:MaterialLink text="Sample 1" >
            &lt;m:badge>&lt;m:MaterialBadge text="1 new" color="blue"/>&lt;/m:badge>
            &lt;/m:MaterialLink>

            &lt;/m:MaterialPanel>
            &lt;/m:item>
            &lt;m:item>&lt;m:MaterialLabel text="Sample 3" />&lt;/m:item>
            &lt;m:item>&lt;m:MaterialLabel text="Sample 4" />&lt;/m:item>
            &lt;/m:MaterialCollection>
        </pre>

        <m:MaterialTitle title="Badges in Dropdown"/>
        <m:MaterialRow>
            <m:MaterialColumn grid="s12 m12 l4">
                <m:MaterialDropDown belowOrigin="true" constraintWidth="true" name="Selection" addStyleNames="blue">
                    <m:MaterialLink text="First"/>
                    <m:MaterialLink text="Second"/>
                    <m:MaterialPanel>
                        <m:MaterialLink text="Sample 1">
                            <m:MaterialBadge text="1 new" backgroundColor="blue"/>
                        </m:MaterialLink>
                    </m:MaterialPanel>
                </m:MaterialDropDown>
            </m:MaterialColumn>
        </m:MaterialRow>


        <pre>
            &lt;m:MaterialDropDown text="Selection" color="blue" activates="myDropDown">
            &lt;m:item>&lt;m:MaterialLink text="First" />&lt;/m:item>
            &lt;m:item>&lt;m:MaterialLink text="Second"/>&lt;/m:item>
            &lt;m:item>
            &lt;m:MaterialPanel>
            &lt;m:MaterialLink text="Sample 1" >
            &lt;m:badge>&lt;m:MaterialBadge text="1 new" color="blue"/>&lt;/m:badge>
            &lt;/m:MaterialLink>
            &lt;/m:MaterialPanel>
            &lt;/m:item>
            &lt;/m:MaterialDropDown>
        </pre>
    </g:HTMLPanel>


</ui:UiBinder>
