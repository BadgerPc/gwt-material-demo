<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:m="urn:import:gwt.material.design.client.ui">

  <ui:with field='res' type='gwt.material.design.demo.client.resources.MaterialResources' />

  <g:HTMLPanel>
    <m:MaterialTitle title="Introduction" description="You can add a Label as a Tab Item and for contents any Material Widget can be added as a Tab Content (e.g MaterialTopNav)"/>

    <m:MaterialRow>
      <m:MaterialColumn grid="s12">
        <m:MaterialTab ui:field="tab" backgroundColor="blue" indicatorColor="yellow" waves="YELLOW">
          <m:MaterialTabItem waves="YELLOW" grid="s4">
            <m:MaterialLink text="Tab 1" href="#tab1" textColor="white"/>
          </m:MaterialTabItem>
          <m:MaterialTabItem waves="YELLOW" grid="s4">
            <m:MaterialLink text="Tab 2" href="#tab2" textColor="white"/>
          </m:MaterialTabItem>
          <m:MaterialTabItem waves="YELLOW" grid="s4">
            <m:MaterialLink text="Tab 3" href="#tab3" textColor="white"/>
          </m:MaterialTabItem>
        </m:MaterialTab>
      </m:MaterialColumn>

      <m:MaterialColumn m:id="tab1" grid="s12">
        <m:MaterialLabel text="Tab 1 Content"/>
      </m:MaterialColumn>
      <m:MaterialColumn m:id="tab2" grid="s12">
        <m:MaterialLabel text="Tab 2 Content"/>
      </m:MaterialColumn>
      <m:MaterialColumn m:id="tab3" grid="s12">
        <m:MaterialLabel text="Tab 3 Content"/>
      </m:MaterialColumn>
    </m:MaterialRow>

    <pre>
      <span class="tag">&lt;m:MaterialTabs</span> <span class="attr">color</span>="blue" <span class="attr">textColor</span>="white" <span class="attr">indicatorColor</span>="yellow" <span class="attr">waves</span>="yellow" <span class="tag">></span>
      <span class="tag">&lt;m:tab>&lt;g:Label</span> <span class="attr">text</span>="sample" <span class="tag">/>&lt;/m:tab></span>
      <span class="tag">&lt;m:tab>&lt;g:Label</span> <span class="attr">text</span>="sample" <span class="tag">/>&lt;/m:tab></span>
      <span class="tag">&lt;m:tab>&lt;g:Label</span> <span class="attr">text</span>="sample" <span class="tag">/>&lt;/m:tab></span>
      <span class="tag">&lt;m:content></span>
      <span class="tag">&lt;m:MaterialTopNav</span> <span class="attr">padding</span>="5" <span class="attr">resource</span>="{res.bg_top_nav}" <span class="attr">title</span>="Sample 1" <span class="attr">description</span>="This is sample 1" <span class="attr">color</span>="blue" <span class="attr">textColor</span>="white" <span class="tag">/></span>
      <span class="tag">&lt;/m:content></span>
      <span class="tag">&lt;m:content></span>
      <span class="tag">&lt;m:MaterialTopNav</span> <span class="attr">padding</span>="5" <span class="attr">resource</span>="{res.bg_top_nav}" <span class="attr">title</span>="Sample 2" <span class="attr">description</span>="This is sample 2" <span class="attr">color</span>="blue" <span class="attr">textColor</span>="white" <span class="tag">/></span>
      <span class="tag">&lt;/m:content></span>
      <span class="tag">&lt;m:content></span>
      <span class="tag">&lt;m:MaterialTopNav</span> <span class="attr">padding</span>="5" <span class="attr">resource</span>="{res.bg_top_nav}" <span class="attr">title</span>="Sample 3" <span class="attr">description</span>="This is sample 3"  <span class="attr">color</span>="blue" <span class="attr">textColor</span>="white" <span class="tag">/></span>
      <span class="tag">&lt;/m:content></span>
      <span class="tag">&lt;/m:MaterialTabs></span>
    </pre>

    <m:MaterialTitle title="Set Tab Index Method" description="By calling this method, you can easily preselect a tab index. Note the index will start at 1."/>

    <m:MaterialRow>
      <m:MaterialColumn grid="s12">
        <m:MaterialTab ui:field="tab2" backgroundColor="blue" indicatorColor="yellow" waves="YELLOW">
          <m:MaterialTabItem waves="YELLOW" grid="s4">
            <m:MaterialLink text="Tab 1" href="#tab21" textColor="white"/>
          </m:MaterialTabItem>
          <m:MaterialTabItem waves="YELLOW" grid="s4">
            <m:MaterialLink text="Tab 2" href="#tab22" textColor="white"/>
          </m:MaterialTabItem>
          <m:MaterialTabItem waves="YELLOW" grid="s4">
            <m:MaterialLink text="Tab 3" href="#tab23" textColor="white"/>
          </m:MaterialTabItem>
        </m:MaterialTab>
      </m:MaterialColumn>

      <m:MaterialColumn m:id="tab21" grid="s12">
        <m:MaterialLabel text="Tab 1 Content"/>
      </m:MaterialColumn>
      <m:MaterialColumn m:id="tab22" grid="s12">
        <m:MaterialLabel text="Tab 2 Content"/>
      </m:MaterialColumn>
      <m:MaterialColumn m:id="tab23" grid="s12">
        <m:MaterialLabel text="Tab 3 Content"/>
      </m:MaterialColumn>
    </m:MaterialRow>

    <pre>
      @UiField MaterialTabs tab;

      public MaterialTabsPanel() {
        initWidget(uiBinder.createAndBindUi(this));
        tab.setTabIndex(1);
      }
    </pre>

  </g:HTMLPanel>
</ui:UiBinder>
